<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vn.poly.storegreen.frangment.AddProductFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Mời bạn điền thông tin sản phẩm"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Thêm ảnh :" />

                <ImageView
                    android:id="@+id/img_aGetImg"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/album" />

                <ImageView
                    android:id="@+id/img_aSetImg"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/ed_aID"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button"
                android:hint="  Mời bạn nhập ma san pham"
                android:paddingLeft="10dp"
                android:textColorHint="#ffff" />


            <EditText
                android:id="@+id/ed_aNameGoods"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button"
                android:hint="  Mời bạn nhập tên mặt hàng"
                android:paddingLeft="10dp"
                android:textColorHint="#ffff" />


            <EditText
                android:id="@+id/ed_aImportPrices"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button"
                android:hint="  Giá nhập"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:textColorHint="#ffff" />


            <EditText

                android:id="@+id/ed_aPrices"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button"
                android:hint="  Giá bán"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:textColorHint="#ffff" />

            <EditText

                android:id="@+id/ed_aAmount"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button"
                android:hint="  Số lượng nhập"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:textColorHint="#ffff" />

            <EditText
                android:id="@+id/ed_aDescribe"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button"
                android:hint=" mô tả sản phẩm"
                android:paddingLeft="10dp"
                android:textColorHint="#ffff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"
                    android:text="Sale :"
                    android:textColorHint="#ffff" />

                <Spinner
                    android:id="@+id/spiner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"></Spinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:weightSum="4">

                <TextView
                    android:id="@+id/tv_addDateImport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Ngày nhập :" />

                <EditText
                    android:id="@+id/tv_addExpired"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />

                <Button
                    android:id="@+id/btn_addDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="date" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_aAddGoods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="Thêm " />

                <Button
                    android:id="@+id/btn_aCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hủy" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</FrameLayout>