<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/update_nameBill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name Bill"></EditText>

    <EditText
        android:id="@+id/update_totalBill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Total"
        android:inputType="number"></EditText>

    <TextView
        android:id="@+id/update_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Total"></TextView>

    <Button
        android:id="@+id/btn_updateday"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:hint="nhập ngày"
        android:textColorHint="#FAF5F5"></Button>
</LinearLayout>