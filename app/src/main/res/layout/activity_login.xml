<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include
        android:id="@+id/toolbar"
        layout="@layout/bar_layour"
        />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_gravity="center"

        android:src="@drawable/anhnen"
        />

    <EditText
        android:paddingLeft="8dp"
        android:textColorHint="#FFFFFF"
        android:hint="   Mời bạn nhập email"
        android:id="@+id/med_lEmail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button"
        android:inputType="textAutoComplete"
        android:textColor="#FFFFFF" />

    <EditText
        android:paddingLeft="8dp"
        android:textColorHint="#FFFFFF"
        android:hint="   Mời bạn nhập password"
        android:id="@+id/med_lPassword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:password="true"
        android:background="@drawable/button"
        android:inputType="textPassword"
        android:textColor="#FFFFFF" />


    <TextView
        android:id="@+id/txt_ForgotPassword"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:text="Forgot password ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center">


        <Button
            android:id="@+id/btn_lLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/buttonn"
            android:text="-> Sing in"
            app:backgroundTint="#61ED9A" />


        <Button
            android:id="@+id/btn_createAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonn"
            android:text="Create account"
            app:backgroundTint="#61ED9A" />


    </LinearLayout>

</LinearLayout>